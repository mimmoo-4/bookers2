<div class='container'>
  <div class='row'>
    <div class='col-lg-6 px-6 mx-auto'>
      <h1>User info</h1>
        <% if @user.errors.any? %>
        <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class='form-group'>
          <label>Name</label>
          <%= f.text_field :name, class: 'form-control', id:"inputName" %>
        </div>
        <div class='form-group'>
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, class: 'form-control-file', placeholder:"プロフィール画像", accept: "image/*" %>
        </div>
        <div class='form-group'>
          <label>Introduction</label>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>
      <% end %>

    </div>

  </div>
</div>