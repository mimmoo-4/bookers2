<h2 class="mt-3">New book</h2>
<%= form_for(book) do |f| %>
  <div class="form-title row">
    <p>Title</p>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>

  <div class="form-body row">
  	<p>Opinion</p>
    <%= f.text_area :body, class: "col-xs-12" %>
  </div>

  <div class="actions row">
    <%= f.submit class: "btn btn-primary col-xs-12" %>
  </div>
<% end %>